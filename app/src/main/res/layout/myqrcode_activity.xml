<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CopyActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="transparent"
        app:leftIconTint="@color/common_icon_color"
        app:titleColor="@color/titlebar_font_color_dark"
        app:lineVisible="false"
        app:title="@string/my_qrcode" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_210"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_210"
                android:layout_height="@dimen/dp_210"
                android:background="@drawable/corners_myqr"/>

            <ImageView
                android:id="@+id/iv_my_logo"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_180"
                android:layout_margin="@dimen/dp_15"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_my_name"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="134********12"
            android:textSize="18sp"
            android:textColor="@color/table_cell_font_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qrcode_indate"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            tools:text="134********12"

            android:textColor="@color/table_cell_font_light"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/qrcode_use_tip"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/table_cell_font_light"
            android:textSize="15sp"
            />

    </LinearLayout>

</LinearLayout>