<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_18"
        >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_person_data_avatar"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_20"
        >
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nickname"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xlg_size"
            tools:text="Xuyihan2004" />
            />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:text="@string/account"
            />
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hjq.widget.view.DrawableTextView
                android:id="@+id/dtv_uid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginTop="@dimen/dp_8"

                android:drawablePadding="@dimen/dp_2"
                android:gravity="left"
                app:drawableHeight="@dimen/dp_20"
                app:drawableWidth="@dimen/dp_20"
                tools:text="13414485712" />
            <com.hjq.widget.view.DrawableTextView
                android:id="@+id/dtv_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:drawableEnd="@drawable/arrows_right_ic"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                app:drawableHeight="@dimen/dp_20"
                app:drawableWidth="@dimen/dp_20" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@drawable/corners"
        />
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_myqrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_leftDrawable="@drawable/arrows_right_ic"
        app:bar_leftText="@string/my_qrcode"
        app:bar_rightDrawable="@drawable/arrows_right_ic"
        />
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_leftDrawable="@drawable/ic_language"
        app:bar_leftText="@string/language"
        app:bar_rightDrawable="@drawable/arrows_right_ic"
         />
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_leftDrawable="@drawable/ic_help"
        app:bar_leftText="@string/help"
        app:bar_rightDrawable="@drawable/arrows_right_ic"
        />
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_checkrefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_leftDrawable="@drawable/ic_refresh"
        app:bar_leftText="@string/checkrefresh"

        >
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/st_hasnewrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_30"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="@string/update_title"
            app:shape="rectangle"
            app:shape_radius="@dimen/dp_720"
            app:shape_solidColor="#F85E5E" />
    </com.hjq.widget.layout.SettingBar>
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_setting_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:bar_leftDrawable="@drawable/ic_agreement"
        app:bar_leftText="@string/setting_agreement"
        app:bar_rightDrawable="@drawable/arrows_right_ic" />
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bar_leftDrawable="@drawable/ic_aboutus"
        app:bar_leftText="@string/aboutus"
        app:bar_rightDrawable="@drawable/arrows_right_ic"
        />
</LinearLayout>